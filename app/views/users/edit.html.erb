<div class ="container px-5 mx-auto">
  <div class ="row">
    <div class ="col-6 mx-auto">
      <h2>User info</h2>
      <div class ="error_message">
        <%= render "books/errors" ,object: @user%>
      </div>
      <%= form_with model: @user do |f| %>
        <div class ="form-group">
          <label for ="user_name">Name</label>
          <%= f.text_field :name ,id: "user_name", class: "form-control" %>
          <label for ="user_image">Image</label>
          <%= f.file_field :profile_image ,placeholder: "画像を選択", id: "user_image", class: "form-control-file", accept: "image/*" %>
          <label for ="user_introduction">Introduction</label>
          <%= f.text_area :introduction, id: "user_introduction", class: "form-control"%>
        </div>
        <%= f.submit "Update User", class: "btn btn-secondary"%>
      <% end %>

    </div>
  </div>
</div>
