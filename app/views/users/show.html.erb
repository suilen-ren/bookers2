<h1>Users#show</h1>
<%= render "books/sidebar"%>

<table>
  <thead>
    <tr>
      <th>title</th>
      <th>opinion</th>
    </tr>
  </thead>
  <tbody>
    <% if @books.any? do%>
      <% @books.each do |book| %>
        <tr>
          <td>
            <%= book.title %>
          </td>
          <td>
            <%= book.opinion %>
          </td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
