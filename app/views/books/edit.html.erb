<div class ="container px-5 mx-auto">
  <div class="row">
    <div class="col-6 mx-auto">
      <h2>Editing Book</h2>
      <%= form_with model: @book ,method: :patch do |f| %>
        <div class ="form-group">
          <label for ="book_title">Title</label>
          <%= f.text_field :title ,id: "book_title" ,class: "form-control" %>
          <label for ="book_body">Opinion</label>
          <%= f.text_area :body ,id: "book_body" , class: "form-control"%>
        </div>
        <%= f.submit "Update Book", class: "btn btn-success"%>
      <% end %>
      <span class="pt-5"><%= link_to "Show", book_path(@book.id) %> |  <%= link_to "Back", books_path %> </span>
    </div>
  </div>
</div>



