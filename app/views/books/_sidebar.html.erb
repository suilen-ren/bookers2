
<h2>User info</h2>
    <%#ここにユーザー情報を表示 %>
    <%# ユーザーの画像を表示 %>
<table class = "table">
    <%= image_tag @user.get_profile_image(100,100) %>
    <tbody>
        <tr></tr>
        <tr>
            <th>name</th>
            <th> <%= @user.name %></th>
        </tr>
        <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
        </tr>
    </tbody>
</table>

<% if @user == current_user %>

    <%= link_to "edit profile", edit_user_path(@user.id) ,class: "btn btn-block btn-outline-secondary"%>
<% end %>

<h2>New Book</h2>

<%= form_with model: @book do |f| %>
    <div class ="form-group">
        <label for ="book_title">title</label>
        <%= f.text_field :title, id: "book_title", class: "form-control" %>
        <label for ="book_body">Opinion</label>
        <%= f.text_area :body ,id: "book_body", class: "form-control"%>
    </div>
    <%= f.submit 'Create book', class: "btn btn-success" %>
<% end %>
