<h1>Books#index</h1>


    <table>
        <thead>
            <tr>
                <th>title</th>
                <th>body</th>
            </tr>
        </thead>
        <tbody>
            <% @books.each do |book|%>
                <tr>
                    <td><%= link_to book.title, book_path(book.id) %></td>
                    <td><%= book.opinion %></td>
                </tr>
            <% end %>
        </tbody>
    </table>


