<div class ="container px-5">
    <div class ="row">
        <div class ="col-3">
            <%= render 'sidebar' %>
        </div>
        <div class ="col-8">
            <h1>Book</h1>
            <table class ="table">
                <thead>
                    <tr>
                        <th></th>
                        <th>Title</th>
                        <th>Opinion</th>
                    </tr>
                </thead>
                <tbody>
                    <% @books.each do |book|%>
                        <tr>
                            <td><%= image_tag book.user.get_profile_image(80,80) %></td>
                            <td><%= link_to book.title, book_path(book.id) %></td>
                            <td><%= book.body %></td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>


